---
import PopularBooksSection from "@/components/common/PopularBooksSection";
import Layout from "../layouts/Layout.astro";
import HeaderSection from "@/components/common/HeaderSection";
import SearchBar from "@/components/common/SearchBar";
import NavBar from "@/components/common/NavBar";
import BrowseSection from "@/components/common/BrowseSection";
---

<Layout title="BookHive">
    <main class="main container">
        <SearchBar className="mb-10" client:load />
        <HeaderSection className="mb-10" />
        <PopularBooksSection className="mb-10" client:load />
        <BrowseSection className="mb-10" />
    </main>
</Layout>

<style>
    .main {
        background-color: rgba(240, 238, 226, 1);
        padding-bottom: 30px;
    }
</style>
